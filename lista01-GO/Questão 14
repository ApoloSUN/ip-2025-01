package main

import "fmt"

func main() {
	var (
		h, a, ab, v float64
	)

	fmt.Println("Digite a altura da pirâmide: ")
	fmt.Scanln(h)
	fmt.Println("Digite o valor de uma aresta do hexágono da base da pirâmide: ")
	fmt.Scanln(a)

	ab = (3 * (a * a) * (1.732 / 2))

	v = (1 / 3) * ab * h

	fmt.Print("O VOLUME DA PIRAMIDE E = ", v, " METROS CUBICOS", "\n")

}
